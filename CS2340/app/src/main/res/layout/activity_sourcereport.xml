<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_report"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.gatech.cs2340.cs2340application.ReportActivity">

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/locationLabel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        tools:text="Location"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp" />

    <TextView
        android:text="(Latitude, Longitude)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:id="@+id/latitudeLabel"
        tools:text="(Latitude, Longitude)"
        android:layout_below="@+id/locationLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:textColor="@color/colorPrimary" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_below="@+id/latitudeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/latitudeLongitude"
        android:text="0,0" />

    <TextView
        android:text="Type of Water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/latitudeLongitude"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/typeOfWater"
        android:textColor="@color/colorPrimary" />


    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:layout_toRightOf="@+id/Other"
            android:id="@+id/otherWaterType"
            android:layout_below="@+id/waterType"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    <RadioGroup
        android:id="@+id/waterType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/typeOfWater"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        `

        <RadioButton
            android:text="Bottled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.23"
            android:layout_alignBaseline="@+id/typeOfWater"
            android:layout_alignBottom="@+id/typeOfWater"
            android:layout_alignRight="@+id/conditionOfWaterLabel"
            android:layout_alignEnd="@+id/conditionOfWaterLabel"
            android:textSize="10sp" />

        <RadioButton
            android:text="Lake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/typeOfWater"
            android:layout_toRightOf="@+id/treatableMuddyCondition"
            android:layout_toEndOf="@+id/treatableMuddyCondition"
            android:textSize="10sp"
            android:layout_weight="0.23" />

        <RadioButton
            android:text="Well"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bottledWaterType"
            android:layout_alignBottom="@+id/bottledWaterType"
            android:layout_toRightOf="@+id/typeOfWater"
            android:layout_toEndOf="@+id/typeOfWater"
            android:textSize="10sp"
            android:layout_weight="0.20" />

        <RadioButton
            android:text="Spring"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/otherWaterType"
            android:layout_alignLeft="@+id/wellWaterType"
            android:layout_alignStart="@+id/wellWaterType"
            android:textSize="10sp"
            android:layout_weight="0.35" />

        <RadioButton
            android:text="Stream"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/wellWaterType"
            android:layout_alignBottom="@+id/wellWaterType"
            android:layout_toRightOf="@+id/springWaterType"
            android:layout_toEndOf="@+id/springWaterType"
            android:textSize="10sp" />


    </RadioGroup>

    <TextView
        android:text="Other:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Other"
        android:layout_weight="0.53"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/waterType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="Condition of Water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/conditionOfWaterLabel"
        android:layout_below="@+id/otherWaterType"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp"
        android:textColor="@color/colorPrimary" />

    <RadioGroup
        android:id="@+id/waterCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_below="@+id/conditionOfWaterLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        `

        <RadioButton
            android:text="Waste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/conditionOfWaterLabel"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/wasteCondition"
            android:textSize="10sp" />

        <RadioButton
            android:text="Treatable-Clear"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:layout_alignBaseline="@+id/wasteCondition"
            android:layout_alignBottom="@+id/wasteCondition"
            android:id="@+id/treatableMuddyCondition"
            android:layout_weight="0.86" />

        <RadioButton
            android:text="Treatable-Muddy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/treatableMuddyCondition"
            android:textSize="10sp"
            android:layout_alignBaseline="@+id/wasteCondition"
            android:layout_alignBottom="@+id/wasteCondition" />

        <RadioButton
            android:text="Potable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/treatableMuddyCondition"
            android:layout_toRightOf="@+id/treatableMuddyCondition"
            android:layout_toEndOf="@+id/treatableMuddyCondition"
            android:id="@+id/potableCondition"
            android:textSize="10sp" />


    </RadioGroup>

    <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:weightSum="1"
        android:paddingLeft="10dp" android:paddingRight="10dp"
        android:layout_below="@+id/waterCondition"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="40dp">

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:layout_above="@+id/LinearLayout02"
            android:layout_alignRight="@+id/typeOfWater"
            android:layout_alignEnd="@+id/typeOfWater"
            android:layout_weight="0.48"
            android:textColor="@color/colorPrimary"
            android:onClick="onCancelPressed">
        </Button>

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/saveButton"
            android:layout_above="@+id/LinearLayout02"
            android:layout_toRightOf="@+id/otherWaterType"
            android:layout_toEndOf="@+id/otherWaterType"
            android:layout_marginBottom="13dp"
            android:layout_weight="0.51"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:onClick="onSavePressed">
        </Button>

    </LinearLayout>

</RelativeLayout>
