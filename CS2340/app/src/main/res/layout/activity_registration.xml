<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <TextView
            android:text="@string/new_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textSize="22sp" android:layout_weight="0.11"
            android:textAlignment="center" android:layout_marginTop="18dp"
            android:textColor="@color/darkGrey" android:paddingBottom="10dp"/>

    <TextView
        android:text="@string/email"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="20sp"
        android:labelFor="@+id/nameTextField"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/nameTextField"
            style="@style/Widget.AppCompat.EditText"
            android:layout_marginLeft="15dp" android:layout_weight="0.11"/>

    <TextView
        android:text="@string/password"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="20sp"
        android:labelFor="@+id/passwordTextField"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextField"
            android:layout_marginLeft="15dp" android:layout_weight="0.11"/>

    <TextView
        android:text="@string/retype_password"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="20sp"
        android:labelFor="@+id/retypePasswordTextField"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/retypePasswordTextField"
            android:layout_marginLeft="15dp" android:layout_weight="0.13"/>

    <TextView
        android:text="@string/id_num"
        android:paddingLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="20sp"
        android:labelFor="@+id/idTextField"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/idTextField" android:layout_marginLeft="15dp"
            android:layout_weight="0.11"/>

