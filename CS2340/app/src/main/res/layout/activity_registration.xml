<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="New User Registration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:text="Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameTextField"
        style="@style/Widget.AppCompat.EditText" />

    <TextView
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/passwordTextField" />

    <TextView
        android:text="Retype Password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/retypePasswordTextField" />

    <TextView
        android:text="ID Number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="18sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/idTextField" />

    <TextView
        android:text="Type of User"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/userTypeLabel" />

    <RadioGroup
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_above="@+id/view_below" >

        <RadioButton
            android:text="Regular User"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userRadioButton"
            android:checked="true"
            android:textSize="12sp" />

        <RadioButton
            android:text="Worker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/workerRadioButton"
            android:textSize="12sp" />

        <RadioButton
            android:text="Manager"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/managerRadioButton"
            android:textSize="12sp" />

        <RadioButton
            android:text="Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/adminRadioButton"
            android:textSize="12sp" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/LinearLayout0"
        android:layout_height="wrap_content"
        android:layout_width="373dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <Button
            android:text="Cancel"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/cancelButton"
            android:onClick="onCancelPressed">
        </Button>

        <Button
            android:text="Register"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/registerButton"
            android:onClick="onRegisterPressed">
        </Button>
    </LinearLayout>
</LinearLayout>