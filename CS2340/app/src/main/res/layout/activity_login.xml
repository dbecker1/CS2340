<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/errorView"
            android:layout_weight="0.08"
            android:textColor="@android:color/holo_red_dark"
            android:textAlignment="center" android:textSize="18sp"/>

    <TextView
            android:text="Username"
            android:layout_width="133dp"
            android:layout_height="wrap_content"
            android:id="@+id/usernameLabel"
            tools:text="Username"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:paddingLeft="15sp"
            android:layout_weight="0.09"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/usernameTextField"
            android:textAlignment="viewStart" android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

    <TextView
            android:text="Password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/passwordLabel"
            android:layout_weight="0.10"
            tools:text="Password"
            android:textAppearance="@android:style/TextAppearance.Material.Medium"
            android:paddingLeft="15sp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"/>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/passwordTextField"
            android:layout_weight="0.08" android:textSize="20sp"
            android:layout_marginLeft="15dp"/>

    <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignParentBottom="true" android:weightSum="1">
        <Button
                android:text="Cancel"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:id="@+id/cancelButton"
                android:onClick="onCancelPressed"
                tools:text="Cancel" android:textColor="@color/reddish"
                android:textSize="16sp" android:layout_weight="0.94">
        </Button>
        <Button
                android:text="Submit"
                android:layout_width="192dp"
                android:layout_height="wrap_content"
                android:id="@+id/submitButton"
                android:onClick="onSubmitPressed"
                android:textAlignment="center"
                android:textColor="@android:color/holo_green_light"
                tools:text="Submit" android:textSize="16sp"
        >
        </Button>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_weight="0.09" />

    <TextView
            android:text="Don't have an account? Register here!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/accountLabel"
            android:layout_weight="0.08"
            android:textAlignment="center" android:textSize="17sp"
            android:textColor="@color/darkGrey"/>

    <Button
            android:text="Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:id="@+id/Register"
            android:textSize="16sp"
            android:textAlignment="center"
            android:onClick="onRegisterPressed" android:elevation="0dp"
            android:textColor="@color/darkGrey" android:layout_weight="0.07"/>
</LinearLayout>
